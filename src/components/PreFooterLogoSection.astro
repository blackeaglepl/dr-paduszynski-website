---
// Sekcja pre-footer: duży whitespace + logo w odcieniu szarości
import logoSzare from '../assets/logo_szare.svg';
---

<section aria-label="Sekcja z logo (pre-footer)" class="bg-medical-white border-t border-medical-bg">
  <div class="container mx-auto px-4 md:px-6 max-w-7xl py-16 md:py-48 lg:py-60">
    <img
      src={logoSzare.src}
      alt="Dr Jarema Paduszyński – Osteopata (logo)"
      class="mx-auto w-56 sm:w-64 md:w-80 opacity-80"
      loading="lazy"
      decoding="async"
    />
  </div>
</section>



